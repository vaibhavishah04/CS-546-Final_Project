<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/public/css/styles.css" />

    <title>Sign In - NJFloodNet</title>
  </head>

  <body>
    <header><%- include('../partials/header'); %></header>

    <main id="signin-container">
      <h1 class="page-title">Sign In to Your Account</h1>

      <!-- Display warning message -->
      <% if (typeof warning !== "undefined" && warning) { %>
        <div
          class="alert alert-warning"
          style="
            color: #856404;
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
          "
        >
          <%= warning %>
        </div>
      <% } %>

      <!-- Display validation errors -->
      <% if (typeof errors !== "undefined" && errors.length > 0) { %>
        <div class="error-messages">
          <ul>
            <% errors.forEach((error) => { %>
              <li><%= error %></li>
            <% }) %>
          </ul>
        </div>
        
      <% } %>

      <form id="log_in_form" method="POST" action="/signin">
        <div class="form-group">
          <label for="username">Username:</label>
          <input
            type="text"
            id="username"
            name="username"
            value="<%= (typeof formData !== 'undefined' && formData.username) ? formData.username : '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            value="<%= (typeof formData !== 'undefined' && formData.password) ? formData.password : '' %>"
            required
          />
        </div>

        <div class="form-group">
          <button type="submit" id="submit_button">Sign In</button>
        </div>

        <div class="form-group">
          <a href="/signup">Create an Account</a>
        </div>
      </form>
    </main>
  </body>
</html>
