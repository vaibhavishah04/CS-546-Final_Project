              <option value="WY" <%= (locals.formData && formData?.state === "WY") ? 'selected' : '' %>>Wyoming - WY</option>
            </select>
          </div>
        </div>

        <div class="signup-form-row">
          <div class="signup-form-group">
            <label class="signup-label" for="firstName">First Name:</label>
            <input
              class="signup-input"
              type="text"
              id="firstName"
              name="firstName"
              value="<%= (typeof formData !== 'undefined' && formData.firstName) ? formData.firstName : '' %>"
              required
            />
          </div>

          <div class="signup-form-group">
            <label class="signup-label" for="lastName">Last Name:</label>
            <input
              class="signup-input"
              type="text"
              id="lastName"
              name="lastName"
              value="<%= (typeof formData !== 'undefined' && formData.lastName) ? formData.lastName : '' %>"
              required
            />
          </div>
        </div>

        <div class="signup-form-row">
          <div class="signup-form-group">
            <label class="signup-label" for="password">Password:</label>
            <input
              class="signup-input"
              type="password"
              id="password"
              name="password"
              value="<%= (typeof formData !== 'undefined' && formData.password) ? formData.password : '' %>"
              required
            />
          </div>

          <div class="signup-form-group">
            <label class="signup-label" for="passwordConf"
              >Confirm Password:</label
            >
            <input
              class="signup-input"
              type="password"
              id="passwordConf"
              name="passwordConf"
              value="<%= (typeof formData !== 'undefined' && formData.passwordConf) ? formData.passwordConf : '' %>"
              required
            />
          </div>
        </div>

        <div class="signup-form-group">
          <% if (typeof errors !== "undefined" && errors.length > 0) { %>
          <div class="error-messages">
            <ul>
              <% errors.forEach((error) => { %>
              <li><%= error %></li>
              <% }) %>
            </ul>
          </div>
          <% } else { %>
          <p>
            Password must contain at least 1 uppercase and lowercase letter, 1
            number, and 1 special character
          </p>
          <% } %>
        </div>

        <div class="signup-form-group">
          <button type="submit" class="signup-button" id="submit_button">
            Sign Up
          </button>
        </div>
      </form>
    </main>
  </body>
</html>
