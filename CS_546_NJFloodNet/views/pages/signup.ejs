              <option value="NH" <%= (locals.formData && formData?.state === "NH") ? 'selected' : '' %>>New Hampshire - NH</option>
              <option value="NJ" <%= (locals.formData && formData?.state === "NJ") ? 'selected' : '' %>>New Jersey - NJ</option>
              <option value="NM" <%= (locals.formData && formData?.state === "NM") ? 'selected' : '' %>>New Mexico - NM</option>
              <option value="NY" <%= (locals.formData && formData?.state === "NY") ? 'selected' : '' %>>New York - NY</option>
              <option value="NC" <%= (locals.formData && formData?.state === "NC") ? 'selected' : '' %>>North Carolina - NC</option>
              <option value="ND" <%= (locals.formData && formData?.state === "ND") ? 'selected' : '' %>>North Dakota - ND</option>
              <option value="OH" <%= (locals.formData && formData?.state === "OH") ? 'selected' : '' %>>Ohio - OH</option>
              <option value="OK" <%= (locals.formData && formData?.state === "OK") ? 'selected' : '' %>>Oklahoma - OK</option>
              <option value="OR" <%= (locals.formData && formData?.state === "OR") ? 'selected' : '' %>>Oregon - OR</option>
              <option value="PA" <%= (locals.formData && formData?.state === "PA") ? 'selected' : '' %>>Pennsylvania - PA</option>
              <option value="RI" <%= (locals.formData && formData?.state === "RI") ? 'selected' : '' %>>Rhode Island - RI</option>
              <option value="SC" <%= (locals.formData && formData?.state === "SC") ? 'selected' : '' %>>South Carolina - SC</option>
