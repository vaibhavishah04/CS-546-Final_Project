<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="/public/css/styles.css" />

    <title>Create Account - NJFloodNet</title>
  </head>

  <body>
    <header><%- include('../partials/header'); %></header>

    <main id="signup-container">
      <h1 class="signup-page-title">Create Your Account</h1>

      <form class="signup-form" method="POST" action="/signup">
        <div class="signup-form-row">
          <div class="signup-form-group">
            <label class="signup-label" for="username">Username:</label>
            <input
              class="signup-input"
              type="text"
              id="username"
              name="username"
              value="<%= (typeof formData !== 'undefined' && formData.username) ? formData.username : '' %>"
              required
            />
          </div>

          <div class="signup-form-group">
            <label class="signup-label" for="email">Email:</label>
            <input
              class="signup-input"
              type="email"
              id="email"
              name="email"
              value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>"
              required
            />
          </div>
        </div>

        <div class="signup-form-row">
          <div class="signup-form-group">
            <label class="signup-label" for="city">City:</label>
            <input
              class="signup-input"
              type="text"
              id="city"
              name="city"
              value="<%= (typeof formData !== 'undefined' && formData.city) ? formData.city : '' %>"
              required
            />
          </div>

          <div class="signup-form-group">
            <label class="signup-label" for="state">State:</label>
            <select
              class="signup-input"
              id="state"
              name="state"
              value="<%= (typeof formData !== 'undefined' && formData.state) ? formData.state : '' %>"
              required
            >
              <option value="" disabled <%= (locals.formData && formData.state) ? '' : 'selected' %>>Select your state</option>
              <option value="AL" <%= (locals.formData && formData?.state === "AL") ? 'selected' : '' %>>Alabama - AL</option>
              <option value="AK" <%= (locals.formData && formData?.state === "AK") ? 'selected' : '' %>>Alaska - AK</option>
              <option value="AZ" <%= (locals.formData && formData?.state === "AZ") ? 'selected' : '' %>>Arizona - AZ</option>
              <option value="AR" <%= (locals.formData && formData?.state === "AR") ? 'selected' : '' %>>Arkansas - AR</option>
              <option value="CA" <%= (locals.formData && formData?.state === "CA") ? 'selected' : '' %>>California - CA</option>
              <option value="CO" <%= (locals.formData && formData?.state === "CO") ? 'selected' : '' %>>Colorado - CO</option>
              <option value="CT" <%= (locals.formData && formData?.state === "CT") ? 'selected' : '' %>>Connecticut - CT</option>
              <option value="DE" <%= (locals.formData && formData?.state === "DE") ? 'selected' : '' %>>Delaware - DE</option>
              <option value="FL" <%= (locals.formData && formData?.state === "FL") ? 'selected' : '' %>>Florida - FL</option>
              <option value="GA" <%= (locals.formData && formData?.state === "GA") ? 'selected' : '' %>>Georgia - GA</option>
              <option value="HI" <%= (locals.formData && formData?.state === "HI") ? 'selected' : '' %>>Hawaii - HI</option>
              <option value="ID" <%= (locals.formData && formData?.state === "ID") ? 'selected' : '' %>>Idaho - ID</option>
              <option value="IL" <%= (locals.formData && formData?.state === "IL") ? 'selected' : '' %>>Illinois - IL</option>
              <option value="IN" <%= (locals.formData && formData?.state === "IN") ? 'selected' : '' %>>Indiana - IN</option>
              <option value="IA" <%= (locals.formData && formData?.state === "IA") ? 'selected' : '' %>>Iowa - IA</option>
              <option value="KS" <%= (locals.formData && formData?.state === "KS") ? 'selected' : '' %>>Kansas - KS</option>
              <option value="KY" <%= (locals.formData && formData?.state === "KY") ? 'selected' : '' %>>Kentucky - KY</option>
              <option value="LA" <%= (locals.formData && formData?.state === "LA") ? 'selected' : '' %>>Louisiana - LA</option>
              <option value="ME" <%= (locals.formData && formData?.state === "ME") ? 'selected' : '' %>>Maine - ME</option>
              <option value="MD" <%= (locals.formData && formData?.state === "MD") ? 'selected' : '' %>>Maryland - MD</option>
              <option value="MA" <%= (locals.formData && formData?.state === "MA") ? 'selected' : '' %>>Massachusetts - MA</option>
              <option value="MI" <%= (locals.formData && formData?.state === "MI") ? 'selected' : '' %>>Michigan - MI</option>
              <option value="MN" <%= (locals.formData && formData?.state === "MN") ? 'selected' : '' %>>Minnesota - MN</option>
              <option value="MS" <%= (locals.formData && formData?.state === "MS") ? 'selected' : '' %>>Mississippi - MS</option>
              <option value="MO" <%= (locals.formData && formData?.state === "MO") ? 'selected' : '' %>>Missouri - MO</option>
