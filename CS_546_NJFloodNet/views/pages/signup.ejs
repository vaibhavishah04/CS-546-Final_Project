              <option value="TN" <%= (locals.formData && formData?.state === "TN") ? 'selected' : '' %>>Tennessee - TN</option>
              <option value="TX" <%= (locals.formData && formData?.state === "TX") ? 'selected' : '' %>>Texas - TX</option>
              <option value="UT" <%= (locals.formData && formData?.state === "UT") ? 'selected' : '' %>>Utah - UT</option>
              <option value="VT" <%= (locals.formData && formData?.state === "VT") ? 'selected' : '' %>>Vermont - VT</option>
              <option value="VA" <%= (locals.formData && formData?.state === "VA") ? 'selected' : '' %>>Virginia - VA</option>
              <option value="WA" <%= (locals.formData && formData?.state === "WA") ? 'selected' : '' %>>Washington - WA</option>
              <option value="WV" <%= (locals.formData && formData?.state === "WV") ? 'selected' : '' %>>West Virginia - WV</option>
